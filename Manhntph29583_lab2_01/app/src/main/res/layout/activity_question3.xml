<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question3"
    android:background="#14000000">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_ngang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_ngang3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_ngang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 3:"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30dp" />
    <ImageView
        android:layout_width="380dp"
        android:layout_height="330dp"
        android:src="@drawable/q3"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <Button
        android:id="@+id/A3"
        android:background="@drawable/a3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ke_doc"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang2"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/B3"
        android:background="@drawable/b3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang"
        app:layout_constraintLeft_toRightOf="@id/ke_doc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang2"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/C3"
        android:background="@drawable/c3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ke_doc"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang3"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/D3"
        android:background="@drawable/d3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ke_doc"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang3"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btn_Pre3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/background_btn"
        android:text="Pre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ke_doc"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang3"
        app:layout_constraintVertical_bias="0.8" />
    <Button
        android:id="@+id/btn_Done"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/background_btn"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toRightOf="@id/ke_doc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang3"
        app:layout_constraintVertical_bias="0.8" />
    <TextView
        android:id="@+id/tv_kq3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Done"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>