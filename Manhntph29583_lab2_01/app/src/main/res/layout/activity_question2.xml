<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_ngang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_ngang3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_ngang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 2:"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30dp" />
    <ImageView
        android:layout_width="380dp"
        android:layout_height="330dp"
        android:src="@drawable/q2"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <Button
        android:id="@+id/A2"
        android:drawableRight="@drawable/a2"
        android:gravity="left"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A. "
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ke_doc"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang2"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/B2"
        android:drawableRight="@drawable/b2"
        android:gravity="left"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B. "
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang"
        app:layout_constraintLeft_toRightOf="@id/ke_doc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang2"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/C2"
        android:drawableRight="@drawable/c2"
        android:gravity="left"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C. "
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ke_doc"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang3"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/D2"
        android:drawableRight="@drawable/d2"
        android:gravity="left"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D. "
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ke_doc"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang3"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btn_Pre2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/background_btn"
        android:text="Pre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ke_doc"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang3"
        app:layout_constraintVertical_bias="0.8" />
    <Button
        android:id="@+id/btn_Next2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/background_btn"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toRightOf="@id/ke_doc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang3"
        app:layout_constraintVertical_bias="0.8" />
    <TextView
        android:id="@+id/tv_kq2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Next2"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>