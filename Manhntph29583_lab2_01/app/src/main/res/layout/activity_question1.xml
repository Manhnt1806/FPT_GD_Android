<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question1"
    android:background="#D3AFE3">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_ngang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_ngang3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_ngang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ke_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1:"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/q1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang"/>
    <Button
        android:id="@+id/A1"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="A.33"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/ke_doc"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang2"
        android:background="@drawable/background_da"
        android:textColor="@color/purple_700"/>
    <Button
        android:id="@+id/B1"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="B.34"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang"
        app:layout_constraintLeft_toRightOf="@id/ke_doc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang2"
        android:background="@drawable/background_da"
        android:textColor="@color/purple_700"/>
    <Button
        android:id="@+id/C1"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="C.64"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/ke_doc"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang3"
        android:background="@drawable/background_da"
        android:textColor="@color/purple_700"/>
    <Button
        android:id="@+id/D1"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="D.Tất cả đều sai"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang2"
        app:layout_constraintLeft_toRightOf="@id/ke_doc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ke_ngang3"
        android:background="@drawable/background_da"
        android:textColor="@color/purple_700"/>
    <Button
        android:id="@+id/btn_Pre1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/background_btn"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ke_doc"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang3"
        app:layout_constraintVertical_bias="0.8" />
    <Button
        android:id="@+id/btn_Next1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/background_btn"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toRightOf="@id/ke_doc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang3"
        app:layout_constraintVertical_bias="0.8" />
    <TextView
        android:id="@+id/tv_kq1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/ke_ngang3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Next1"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>