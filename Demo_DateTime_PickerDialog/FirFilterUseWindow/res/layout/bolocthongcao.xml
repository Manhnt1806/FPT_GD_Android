<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bộ Lọc Thông Cao"
        android:gravity="center"
        android:textColor="#0000ff"
        android:textSize="20dp"/>
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvdoronggiaichuyentiepthongcao"
            android:text="Độ rộng giải chuyển tiếp:"
            android:textSize="15dp"
            android:layout_marginTop="15dp"/>
        <EditText 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editDoRongGiaiChuyenTiepThongCao"
            android:text="0.03"
            android:inputType="numberDecimal"
            ></EditText>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PI"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp" />
    </TableRow>
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDoSuyHaoDaiChanThongCao"
            android:text="Độ suy hao dải chắn:"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>
        <EditText 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editDoSuyHaoDaiChanThongCao"
            android:text="40.0"
            android:inputType="numberDecimal"
            ></EditText>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dB"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp" />
    </TableRow>
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTanSoThongBLThongCao"
            android:text="Tần Số Thông Wc:"
            android:textSize="15sp"
            android:layout_marginTop="15dp" 
            />
        <EditText 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTanSoThongBLThongCao"
            android:text="0.7"
            android:inputType="numberDecimal"
            ></EditText>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PI"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp" />
    </TableRow>
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btDesignBLThongCao"
            android:text="Thiết kế bộ lọc"
            android:textSize="20sp"
            android:gravity="center" />
    </TableRow>

</LinearLayout>
