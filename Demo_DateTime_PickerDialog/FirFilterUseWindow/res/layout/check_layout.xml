<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical" 
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
	        	android:textColor="#0000ff"
	        	android:gravity="center"
                android:text="Nhập thông số tín hiệu đầu vào:"/>
            <TableRow 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x(n)=sin("/>
                <EditText 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="0.1"
                    android:id="@+id/dauvaow1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text=" πn)+sin("
                    />
                <EditText 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="0.7"
                    android:id="@+id/dauvaow2"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" πn)"/>
            </TableRow>
            <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:layout_gravity="center"
            android:id="@+id/btKiemTraBoLoc"/>
            <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
	        android:textColor="#0000ff"
	        android:gravity="center"
            android:text="Đồ Thị Đầu Vào Bộ Lọc"
            android:id="@+id/tvDoThiDauVao"/>
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/dothidauvao"></LinearLayout>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
	        android:textColor="#0000ff"
	        android:gravity="center"
            android:text="Đáp ứng xung đầu ra"
            android:id="@+id/tvDapUngXungDauRa"/>
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/chart_height"
            android:id="@+id/dapungxungdaura"></LinearLayout>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
	        android:textColor="#0000ff"
	        android:gravity="center"
            android:text="Đáp ứng biên độ đầu ra"
            android:id="@+id/tvDapUngBienDoDauRa"/>
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/chart_height"
            android:id="@+id/dapungbiendodaura"></LinearLayout>
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>
